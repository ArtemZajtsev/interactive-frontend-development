{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "mocha": true
  },
  "plugins": ["import","react"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "google",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "globals": {
    "expect": true,
    "sinon": true
  },
  rules: {
    "require-jsdoc": "off",
    "max-len": ["error", 120],
    "comma-dangle": "off",
    "linebreak-style": "off"
  }
}